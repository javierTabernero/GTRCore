@page
@model GTR.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4 col-lg-3">
        <div asp-validation-summary="All"></div>
        <form asp-action="Register" method="post">
            <div class="form-group">
                <label asp-for="RegisterViewModel.Name">@GTR.Resources.Resources.Resources.UI_Name:</label>
                <input asp-for="RegisterViewModel.Name" class="form-control" />
                <span asp-validation-for="RegisterViewModel.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterViewModel.Email">@GTR.Resources.Resources.Resources.UI_Email:</label>
                <input asp-for="RegisterViewModel.Email" class="form-control" />
                <span asp-validation-for="RegisterViewModel.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterViewModel.Password">@GTR.Resources.Resources.Resources.UI_Password:</label>
                <input asp-for="RegisterViewModel.Password" class="form-control" />
                <span asp-validation-for="RegisterViewModel.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterViewModel.PasswordConfirmation">@GTR.Resources.Resources.Resources.UI_ConfirmPassword:</label>
                <input asp-for="RegisterViewModel.PasswordConfirmation" class="form-control" />
                <span asp-validation-for="RegisterViewModel.PasswordConfirmation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterViewModel.Role">@GTR.Resources.Resources.Resources.UI_Role:</label>
                <select asp-for="RegisterViewModel.Role" asp-items="Model.RegisterViewModel.Roles" class="form-control"></select>
                <span asp-validation-for="RegisterViewModel.Role" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success">@GTR.Resources.Resources.Resources.UI_Register</button>
        </form>
    </div>
</div>
@Html.AntiForgeryToken()