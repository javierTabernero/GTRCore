@page
@model GTR.Pages.Account.loginModel
@{
    ViewData["Title"] = "login";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4 col-lg-3">
        <div asp-validation-summary="All"></div>
        <form asp-action="Login" method="post">
            <div class="form-group">
                <label asp-for="LoginViewModel.Email">@GTR.Resources.Resources.Resources.UI_Email:</label>
                <input asp-for="LoginViewModel.Email" class="form-control" />
                <span asp-validation-for="LoginViewModel.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoginViewModel.Password">@GTR.Resources.Resources.Resources.UI_Password:</label>
                <input asp-for="LoginViewModel.Password" class="form-control" />
                <span asp-validation-for="LoginViewModel.Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success">@GTR.Resources.Resources.Resources.UI_Login</button>
        </form>
    </div>
</div>
@Html.AntiForgeryToken()