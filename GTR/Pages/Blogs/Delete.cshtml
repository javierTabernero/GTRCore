@page
@model GTR.Pages.Blogs.DeleteModel

@{
    ViewData["Title"] = @GTR.Resources.Resources.Resources.Delete;
}

<h2>@GTR.Resources.Resources.Resources.Delete</h2>

<h3>@GTR.Resources.Resources.Resources.DeleteSure</h3>
<div>
    <h4>@GTR.Resources.Resources.Resources.Blog</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@GTR.Resources.Resources.Resources.BlogUrl</dt>
        <dd>@Html.DisplayFor(model => model.Blog.Url)</dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Blog.BlogId" />
        <input type="submit" value="@GTR.Resources.Resources.Resources.Delete" class="btn btn-default" /> |
        <a asp-page="./Index">@GTR.Resources.Resources.Resources.BackToBlogList</a>
    </form>
</div>