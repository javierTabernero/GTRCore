@page
@model GTR.Pages.Blogs.EditModel

@{
    ViewData["Title"] = @GTR.Resources.Resources.Resources.Edit;
}

<h2>@GTR.Resources.Resources.Resources.Edit</h2>

<h4>@GTR.Resources.Resources.Resources.Blog</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Blog.BlogId" />
            <div class="form-group">
                <label asp-for="Blog.Url" class="control-label"></label>
                <input asp-for="Blog.Url" class="form-control" />
                <span asp-validation-for="Blog.Url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@GTR.Resources.Resources.Resources.Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">@GTR.Resources.Resources.Resources.BackToBlogList</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
